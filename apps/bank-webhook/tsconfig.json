{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
     "allowSyntheticDefaultImports": true,


    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",

    "lib": ["ESNext"],
    "types": ["node"],

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true
  }
}
