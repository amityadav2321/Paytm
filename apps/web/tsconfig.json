{
  "extends": "@repo/typescript-config/nextjs.json",

  "compilerOptions": {
    "baseUrl": ".",

    "paths": {
      "@/*": ["./*"]
    },

    // ⭐ IMPORTANT: Add typeRoots
    "typeRoots": [
      "./types",                      // <-- your custom NextAuth types
      "./node_modules/@types"
    ],

    // ⭐ Optional but recommended
    "types": ["next-auth"],

    "plugins": [
      {
        "name": "next"
      }
    ]
  },

  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.ts",
    ".next/types/**/*.ts",
    "types/**/*.d.ts"                 // ⭐ ensure NextAuth typings are included
  ],

  "exclude": ["node_modules"]
}
